<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="8dp">    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:orientation="vertical">        <!-- Put your Item contents like Images, TextViews... etc -->        <TextView            android:id="@+id/display_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="TITLE"            style="@style/SportsTitle"            />        <TextView            android:id="@+id/display_info"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Info"            style="@style/SportsInfo"            />        <ImageView            android:id="@+id/imageView_meal"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </LinearLayout></android.support.v7.widget.CardView>